<html>
    <head>
        <%- include('./partials/head'); %>
        <link rel="stylesheet" type="text/css" href="/style/index2.css">
    </head>
    <body>

        <div class="d-flex fixed-top bg-dark justify-content-center py-3">

            <button id="btnMenu" class="btn navbar-brand mx-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNeighborhoods" aria-controls="offcanvasNeighborhoods">
            </button>

            <form class="w-75 mb-0 d-flex justify-content-between">
                <input class="w-100 mx-1 rounded-end form-control" type="text">
                <input class="mx-1 align-self-center" type="image" src="/media/search.png" style="width: 25px; height: 25px;color: #fff;"></input>
            </form>
        </div>


          
          <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNeighborhoods" aria-labelledby="offcanvasNeighborhoodsLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasNeighborhoodsLabel">Neighborhoods</h5>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <div class="list-group" id="neighborhoodsMenu">
                <% neighborhoods.forEach( (n) => {%>
                    <a href="#" class="my-2 list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <%= n.name %>
                        <span class="badge bg-primary rounded-pill">14</span>                
                    </a>
                <% });%>       
              </div>

            </div>
          </div>

            <div class="row home-content">
              <% restaurants.forEach( (r) => {%>
                <div class="col-12 col-sm-4 d-flex justify-content-center my-4">
                
                <div class="card" style="width: 18rem;">
                  <img src="/media/cover-restaurants.jpg" class="card-img-top" >
                  <div class="card-body">
                    <h5 class="card-title"><%= r.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= r.cuisine %></h6>
                    <p class="card-text"><%= r.borough %> - <%= r.address.street %></p>
                    <a href="#" class="btn btn-primary">View Details</a>
                  </div>
                </div>  

                </div>
            <% });%>
            </div>
            
            
          </div>

        <%- include('./partials/bootstrapjs'); %>
    </body>
</html>